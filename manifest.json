{
    "manifest_version": 3,
    "name": "Bandcamp Cookie Cleaner",
    "version": "1.0",
    "description": "Click on the Bandcamp Cookie Cleaner extension while on bandcamp.com to delete cookies that limit album replays.",
    "permissions": [
        "cookies",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "host_permissions": [
      "*://*.bandcamp.com/*"
    ]
  }
  